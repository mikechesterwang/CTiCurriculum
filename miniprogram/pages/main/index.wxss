  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.page-top-bar{
  width: 90%;
  display: flex;
  flex-direction: row-reverse;
  justify-content: start;
  margin: 20rpx;
}
.curriculum-top{
