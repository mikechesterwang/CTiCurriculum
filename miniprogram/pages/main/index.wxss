  height: 70rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  background-color: #789EE3;

  display: flex;
  flex-direction: row;
}

.curriculum-line{
  width: 100%;
  height: 4rpx;
  background-color: #d4ddee;
}

.week-box{
  width: 100rpx;
  height: 70rpx;
  display: flex;
